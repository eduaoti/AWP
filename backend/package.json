{
  "name": "awp-backend-express-mvp",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "dist/index.js",

  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec \"ts-node src/index.ts\"",
    "build": "tsc -p tsconfig.json",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:ci": "jest --config jest.config.ts --coverage --runInBand --reporters=default --reporters=jest-junit",
    "test:cov": "jest --config jest.config.ts --coverage --runInBand",
    "start": "node dist/index.js",

    "sonar": "sonar-scanner -Dsonar.token=$SONAR_TOKEN",
    "analyze": "npm run test:cov && npm run sonar"
  },

  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "otplib": "^12.0.1",
    "pg": "^8.12.0",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.23",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "3.1.7",
    "pg-mem": "^3.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
