{
  "openapi": "3.0.3",
  "info": {
    "title": "AWP MVP API",
    "version": "1.0.0",
    "description": "API básica para usuarios y auth con validación estricta y respuesta estándar {codigo, mensaje, data}"
  },
  "tags": [
    { "name": "Auth", "description": "Login y validación OTP" },
    { "name": "Recovery", "description": "Recuperación de contraseña" },
    { "name": "Usuarios", "description": "Gestión de usuarios" }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login con email y password (paso 1)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 }
                }
              },
              "example": { "email": "edu@test.com", "password": "Abcdef12" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Login" },
          "401": { "$ref": "#/components/responses/RespError" },
          "429": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/auth/login/otp": {
      "post": {
        "tags": ["Auth"],
        "summary": "Verificar OTP/backup y emitir token final (paso 2)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["preAuth", "code"],
                "properties": {
                  "preAuth": { "type": "string" },
                  "code": { "type": "string", "minLength": 6, "maxLength": 8 },
                  "deviceId": { "type": "string" }
                }
              },
              "example": { "preAuth": "eyJhbGciOi...", "code": "123456" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ApiOk_Login" },
                "example": {
                  "codigo": 0,
                  "mensaje": "OK",
                  "path": "/auth/login/otp",
                  "timestamp": "2025-01-01T10:00:00Z",
                  "data": { "requiresOtp": false, "token": "eyJhbGciOi..." }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/auth/otp/setup/start": {
      "post": {
        "tags": ["Auth"],
        "summary": "Iniciar configuración de OTP (Google Authenticator)",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_OtpSetupStart" },
          "401": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/auth/otp/setup/confirm": {
      "post": {
        "tags": ["Auth"],
        "summary": "Confirmar OTP (guardar secreto + generar backup codes)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["secret", "code"],
                "properties": {
                  "secret": { "type": "string", "minLength": 16, "description": "Secreto base32" },
                  "code": { "type": "string", "minLength": 6, "maxLength": 8 }
                }
              },
              "example": { "secret": "JBSWY3DPEHPK3PXP", "code": "123456" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_OtpSetupConfirm" },
          "401": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/auth/recovery/request": {
      "post": {
        "tags": ["Recovery"],
        "summary": "Solicitar recuperación de contraseña (envía link al correo)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": { "email": { "type": "string", "format": "email" } }
              },
              "example": { "email": "edu@test.com" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Generic" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/auth/recovery/confirm": {
      "post": {
        "tags": ["Recovery"],
        "summary": "Confirmar recuperación de contraseña (token + nueva contraseña)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["token", "newPassword"],
                "properties": {
                  "token": { "type": "string", "minLength": 20 },
                  "newPassword": { "type": "string", "minLength": 8 }
                }
              },
              "example": { "token": "abc123...", "newPassword": "NuevoPass1!" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Generic" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/nuevo": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Crear un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioCrear" },
              "example": {
                "nombre": "Edu Ortiz",
                "email": "edu@test.com",
                "password": "Abcdef12",
                "rol": "editor"
              }
            }
          }
        },
        "responses": {
          "201": { "$ref": "#/components/responses/RespOk_UsuarioPublico" },
          "400": { "$ref": "#/components/responses/RespError" },
          "409": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/actualizar": {
      "put": {
        "tags": ["Usuarios"],
        "summary": "Actualizar un usuario existente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioActualizar" },
              "example": {
                "id": 1,
                "nombre": "Edu Actualizado",
                "email": "edu@test.com",
                "rol": "admin"
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_UsuarioPublico" },
          "404": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/eliminar": {
      "post": {
        "tags": ["Usuarios"],
        "summary": "Eliminar un usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id"],
                "properties": { "id": { "type": "integer", "example": 1 } }
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Eliminar" },
          "404": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios": {
      "get": {
        "tags": ["Usuarios"],
        "summary": "Listar usuarios",
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_UsuarioPublicoArray" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UsuarioCrear": {
        "type": "object",
        "required": ["nombre", "email", "password", "rol"],
        "properties": {
          "nombre": { "type": "string", "minLength": 2, "maxLength": 80 },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 8 },
          "rol": { "type": "string", "enum": ["admin", "editor", "lector"] }
        }
      },
      "UsuarioActualizar": {
        "type": "object",
        "required": ["id", "nombre", "email", "rol"],
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "rol": { "type": "string", "enum": ["admin", "editor", "lector"] }
        }
      },
      "UsuarioPublico": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "email": { "type": "string" },
          "rol": { "type": "string" },
          "creado_en": { "type": "string", "format": "date-time" }
        }
      },

      "ApiBase": {
        "type": "object",
        "required": ["codigo", "mensaje", "path", "timestamp"],
        "properties": {
          "codigo": { "type": "integer", "description": "0=OK, >0=Error" },
          "mensaje": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "path": { "type": "string" },
          "detalle": { "type": "object", "nullable": true }
        }
      },

      "ApiError": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" }
        ],
        "example": {
          "codigo": 4,
          "mensaje": "Credenciales inválidas",
          "path": "/auth/login",
          "timestamp": "2025-01-01T10:00:00Z"
        }
      },

      "ApiOk_Login": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "requiresOtp": { "type": "boolean" },
                  "token": { "type": "string", "nullable": true },
                  "preAuth": { "type": "string", "nullable": true }
                },
                "required": ["requiresOtp"]
              }
            },
            "required": ["data"]
          }
        ],
        "example": {
          "codigo": 0,
          "mensaje": "OK",
          "path": "/auth/login",
          "timestamp": "2025-01-01T10:00:00Z",
          "data": {
            "requiresOtp": true,
            "preAuth": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        }
      },

      "ApiOk_UsuarioPublico": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": { "$ref": "#/components/schemas/UsuarioPublico" }
            },
            "required": ["data"]
          }
        ]
      },

      "ApiOk_UsuarioPublicoArray": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/UsuarioPublico" }
              }
            },
            "required": ["data"]
          }
        ]
      },

      "ApiOk_Eliminar": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "mensaje": { "type": "string" },
                  "id": { "type": "integer" }
                },
                "required": ["id"]
              }
            },
            "required": ["data"]
          }
        ]
      },

      "ApiOk_OtpSetupStart": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "secret": { "type": "string" },
                  "otpauth_uri": { "type": "string" },
                  "qrcode_png": { "type": "string", "description": "data:image/png;base64,..." }
                },
                "required": ["secret", "otpauth_uri"]
              }
            },
            "required": ["data"]
          }
        ]
      },

      "ApiOk_OtpSetupConfirm": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "otp_enabled": { "type": "boolean" },
                  "backup_codes": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["otp_enabled", "backup_codes"]
              }
            },
            "required": ["data"]
          }
        ]
      },

      "ApiOk_Generic": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": { "data": { "type": "object" } },
            "required": ["data"]
          }
        ]
      }
    },

    "responses": {
      "RespOk_Login": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_Login" } } }
      },
      "RespOk_UsuarioPublico": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_UsuarioPublico" } } }
      },
      "RespOk_UsuarioPublicoArray": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_UsuarioPublicoArray" } } }
      },
      "RespOk_Eliminar": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_Eliminar" } } }
      },
      "RespOk_OtpSetupStart": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_OtpSetupStart" } } }
      },
      "RespOk_OtpSetupConfirm": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_OtpSetupConfirm" } } }
      },
      "RespOk_Generic": {
        "description": "OK",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_Generic" } } }
      },
      "RespError": {
        "description": "Error estándar",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ApiError" } } }
      }
    }
  }
}
