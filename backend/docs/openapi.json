{
  "openapi": "3.0.3",
  "info": {
    "title": "AWP MVP API",
    "version": "1.0.0",
    "description": "API básica para usuarios y auth con validación estricta y respuesta estándar {codigo, mensaje, data}"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login con email y password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 }
                }
              },
              "example": { "email": "edu@test.com", "password": "Abcdef12" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Login" },
          "401": { "$ref": "#/components/responses/RespError" },
          "429": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/nuevo": {
      "post": {
        "summary": "Crear un nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioCrear" },
              "example": {
                "nombre": "Edu Ortiz",
                "email": "edu@test.com",
                "password": "Abcdef12",
                "rol": "editor"
              }
            }
          }
        },
        "responses": {
          "201": { "$ref": "#/components/responses/RespOk_UsuarioPublico" },
          "400": { "$ref": "#/components/responses/RespError" },
          "409": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/actualizar": {
      "put": {
        "summary": "Actualizar un usuario existente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UsuarioActualizar" },
              "example": {
                "id": 1,
                "nombre": "Edu Actualizado",
                "email": "edu@test.com",
                "rol": "admin"
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_UsuarioPublico" },
          "404": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios/eliminar": {
      "post": {
        "summary": "Eliminar un usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id"],
                "properties": { "id": { "type": "integer", "example": 1 } }
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_Eliminar" },
          "404": { "$ref": "#/components/responses/RespError" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    },
    "/usuarios": {
      "get": {
        "summary": "Listar usuarios",
        "responses": {
          "200": { "$ref": "#/components/responses/RespOk_UsuarioPublicoArray" },
          "default": { "$ref": "#/components/responses/RespError" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UsuarioCrear": {
        "type": "object",
        "required": ["nombre", "email", "password", "rol"],
        "properties": {
          "nombre": { "type": "string", "minLength": 2, "maxLength": 80 },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 8 },
          "rol": { "type": "string", "enum": ["admin", "editor", "lector"] }
        }
      },
      "UsuarioActualizar": {
        "type": "object",
        "required": ["id", "nombre", "email", "rol"],
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "rol": { "type": "string", "enum": ["admin", "editor", "lector"] }
        }
      },
      "UsuarioPublico": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "email": { "type": "string" },
          "rol": { "type": "string" },
          "creado_en": { "type": "string", "format": "date-time" }
        }
      },

      "ApiBase": {
        "type": "object",
        "required": ["codigo", "mensaje", "path", "timestamp"],
        "properties": {
          "codigo": { "type": "integer", "description": "0=OK, >0=Error" },
          "mensaje": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "path": { "type": "string" },
          "detalle": { "type": "object", "nullable": true }
        }
      },
      "ApiError": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" }
        ],
        "example": {
          "codigo": 4,
          "mensaje": "Credenciales inválidas",
          "path": "/auth/login",
          "timestamp": "2025-01-01T10:00:00Z"
        }
      },
      "ApiOk_Login": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" },
                  "requiresOtp": { "type": "boolean" },
                  "otp_example_code": { "type": "string" }
                }
              }
            },
            "required": ["data"]
          }
        ]
      },
      "ApiOk_UsuarioPublico": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": { "$ref": "#/components/schemas/UsuarioPublico" }
            },
            "required": ["data"]
          }
        ]
      },
      "ApiOk_UsuarioPublicoArray": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/UsuarioPublico" }
              }
            },
            "required": ["data"]
          }
        ]
      },
      "ApiOk_Eliminar": {
        "allOf": [
          { "$ref": "#/components/schemas/ApiBase" },
          {
            "type": "object",
            "properties": {
              "data": {
                "type": "object",
                "properties": {
                  "mensaje": { "type": "string" },
                  "id": { "type": "integer" }
                },
                "required": ["id"]
              }
            },
            "required": ["data"]
          }
        ]
      }
    },
    "responses": {
      "RespOk_Login": {
        "description": "OK",
        "content": {
          "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_Login" } }
        }
      },
      "RespOk_UsuarioPublico": {
        "description": "OK",
        "content": {
          "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_UsuarioPublico" } }
        }
      },
      "RespOk_UsuarioPublicoArray": {
        "description": "OK",
        "content": {
          "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_UsuarioPublicoArray" } }
        }
      },
      "RespOk_Eliminar": {
        "description": "OK",
        "content": {
          "application/json": { "schema": { "$ref": "#/components/schemas/ApiOk_Eliminar" } }
        }
      },
      "RespError": {
        "description": "Error estándar",
        "content": {
          "application/json": { "schema": { "$ref": "#/components/schemas/ApiError" } }
        }
      }
    }
  }
}
