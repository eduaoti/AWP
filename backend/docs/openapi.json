{
  "openapi": "3.0.3",
  "info": {
    "title": "AWP MVP API",
    "version": "1.0.0",
    "description": "API b�sica para usuarios y auth con OTP"
  },
  "paths": {
    "/usuarios": {
      "get": { "summary": "Listar usuarios", "responses": { "200": { "description": "Lista de usuarios" } } }
    },
    "/usuarios/nuevo": {
      "post": {
        "summary": "Crear usuario",
        "requestBody": {
          "required": true,
          "content": { "application/json": {
            "schema": { "type": "object", "properties": {
              "nombre": {"type": "string"},
              "email": {"type": "string"},
              "password": {"type": "string"},
              "rol": {"type": "string", "enum": ["admin","editor","lector"]}
            }, "required": ["nombre","email","password","rol"] }
          } }
        },
        "responses": { "201": { "description": "Usuario creado" } }
      }
    },
    "/auth/login": { "post": { "summary": "Login con email y password", "responses": { "200": { "description": "JWT y OTP" } } } },
    "/auth/login/otp": { "post": { "summary": "Verificar OTP de login", "responses": { "200": { "description": "OTP ok" } } } },
    "/auth/recuperar-usuario": { "post": { "summary": "Solicitar recuperaci�n", "responses": { "200": { "description": "Instrucciones" } } } }
  }
}
